<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pembelian_tree_view_id" model="ir.ui.view">
        <field name="name">pembelian.tree</field>
        <field name="model">pembelian.pembelian</field>
        <field name="arch" type="xml">
            <tree string="Pembelian">
                <field name="name"/>
                <field name="tanggal"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    
    <record id="pembelian_form_view_id" model="ir.ui.view">
        <field name="name">pembelian_form_view_id</field>
        <field name="model">pembelian.pembelian</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="tanggal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
        
    </record>
</odoo>